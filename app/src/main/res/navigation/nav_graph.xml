<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/listFragment">
    <fragment
        android:id="@+id/listFragment"
        android:name="ru.levprav.shaint.ui.listproducts.view.ListOfProductsFragment"
        android:label="MoviesFragment" >
        <action
            android:id="@+id/action_moviesFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/in_anim"
            app:exitAnim="@anim/out_anim"
            app:popEnterAnim="@anim/in_anim"
            app:popExitAnim="@anim/out_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="ru.levprav.shaint.ui.details.DetailsFragment"
        android:label="DetailFragment" >
        <argument
            android:name="productId"
            app:argType="integer" />
    </fragment>
</navigation>